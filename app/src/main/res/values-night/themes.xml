<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.PayDay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Set ActionBar color -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryVariant">@color/green_primary</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/dark_on_background</item>
        <item name="android:textColorSecondary">@color/dark_on_surface</item>

        <!-- Status and navigation bar colors -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>

        <!-- ActionBar color -->
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowActionBar">@color/green_primary</item>
    </style>
</resources>
