<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:name=".ui.chat.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PayDay"
        tools:targetApi="31">
        <receiver android:name=".utils.NetworkChangeReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE"
                    tools:ignore="BatteryLife" />
            </intent-filter>
        </receiver>
        <!-- SplashActivity is the LAUNCHER (first screen) -->
        <activity
            android:name=".ui.auth.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- LoginActivity -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false" /> <!-- RegisterActivity -->
        <activity
            android:name=".ui.auth.RegisterActivity"
            android:exported="false" /> <!-- ForgotPasswordActivity -->
        <activity
            android:name=".ui.auth.ForgotPasswordActivity"
            android:exported="false" /> <!-- MainActivity (shown after login/registration) -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="false" /> <!-- Add declarations for your new activities here -->
        <activity
            android:name=".ui.groups.QuickGroupDetailsActivity"
            android:exported="false"
            android:parentActivityName=".ui.MainActivity" />

        <activity
            android:name=".ui.groups.LiveGroupDetailsActivity"
            android:exported="false"
            android:parentActivityName=".ui.MainActivity" />

        <activity
            android:name=".ui.groups.AddExpenseActivity"
            android:exported="false" />

        <activity
            android:name=".ui.groups.ExpenseDetailsActivity"
            android:exported="false" />
            
        <activity
            android:name=".ui.profile.DonationDetailsActivity"
            android:exported="false" />



    </application>

</manifest>